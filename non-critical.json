{
  "extends": [
    ":prHourlyLimit2",
    ":prNotPending",
    ":rebaseStalePrs",
    ":renovatePrefix",
    ":semanticCommits",
    ":timezone(Australia/Melbourne)",
    "preview:buildkite",
    "preview:dockerCompose"
  ],
  "packageRules": [
    {
      "groupName": "gantry",
      "packageNames": ["seek-jobs/gantry"],
      "prPriority": 99,
      "schedule": "before 7am on every weekday"
    },
    {
      "groupName": "all dependencies",
      "packagePatterns": ["*"],
      "recreateClosed": true
    }
  ],
  "buildkite": {
    "commitMessageExtra": "",
    "managerBranchPrefix": ""
  },
  "docker": {
    "commitMessageExtra": "",
    "group": {
      "commitMessageTopic": "{{groupName}}"
    }
  },
  "commitMessageAction": "",
  "commitMessageExtra": "",
  "ignoreNpmrcFile": true,
  "lazyGrouping": false,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 2,
  "prNotPendingHours": 1,
  "schedule": "before 7am on Monday",
  "semanticCommitScope": "",
  "semanticCommitType": "fix",
  "separateMajorMinor": false
}
