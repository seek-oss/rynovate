{
  "extends": [
    ":prHourlyLimit4",
    ":rebaseStalePrs",
    ":renovatePrefix",
    ":semanticCommits",
    ":timezone(Australia/Melbourne)",
    ":updateNotScheduled",
    "preview:buildkite",
    "preview:dockerCompose",
    "docker:disableMajor"
  ],
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "semanticCommitType": "fix"
    },
    {
      "digest": {
        "commitMessageExtra": "",
        "groupName": "gomod digests",
        "schedule": "before 7am on the first day of the month"
      },
      "managers": ["gomod"],
      "semanticCommitType": "fix"
    },
    {
      "commitMessageExtra": "{{newValue}}",
      "commitMessageTopic": "{{depName}}",
      "managers": ["buildkite", "gomod", "npm", "nvm"]
    },
    {
      "managers": ["npm"],
      "packageNames": ["@types/node"],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "automerge": true,
      "commitMessageExtra": "",
      "groupName": "npm definitely typed",
      "managers": ["npm"],
      "packagePatterns": ["^@types/"],
      "prPriority": 99,
      "recreateClosed": true,
      "schedule": "before 7am on Tuesday"
    },
    {
      "commitMessageExtra": "",
      "depTypeList": ["devDependencies"],
      "excludePackageNames": ["braid-design-system", "sku", "skuba"],
      "excludePackagePatterns": ["^@?seek", "seek$", "^@types/"],
      "groupName": "npm dev dependencies",
      "managers": ["npm"],
      "recreateClosed": true,
      "schedule": "before 7am on Tuesday"
    },
    {
      "commitMessageExtra": "",
      "depTypeList": ["peerDependencies"],
      "excludePackageNames": ["braid-design-system", "sku", "skuba"],
      "excludePackagePatterns": ["^@?seek", "seek$", "^@types/"],
      "groupName": "npm peer dependencies",
      "managers": ["npm"],
      "recreateClosed": true,
      "schedule": "before 7am on Tuesday"
    },
    {
      "commitMessageExtra": "",
      "excludePackagePatterns": ["^seek-jobs/", "^seek-oss/"],
      "groupName": "buildkite plugins",
      "managerBranchPrefix": "",
      "managers": ["buildkite"],
      "recreateClosed": true,
      "schedule": "before 7am on Wednesday"
    },
    {
      "commitMessageExtra": "",
      "group": {
        "commitMessageTopic": "{{groupName}}"
      },
      "groupName": "docker images",
      "managers": ["docker-compose", "dockerfile"],
      "recreateClosed": true,
      "schedule": "before 7am on Wednesday"
    },
    {
      "packageNames": ["braid-design-system", "sku", "skuba"],
      "packagePatterns": ["^@?seek", "seek$"],
      "prPriority": 98,
      "schedule": "before 7am on every weekday"
    },
    {
      "depTypeList": ["dependencies"],
      "packageNames": ["aws-sdk"],
      "schedule": "before 7am on the first day of the month"
    },
    {
      "automerge": true,
      "depTypeList": ["devDependencies"],
      "packageNames": [
        "@seek/candidate-data-contracts",
        "@seek/ie-shared-types",
        "@seek/indie-cardib-types"
      ]
    },
    {
      "automerge": true,
      "depTypeList": ["devDependencies"],
      "packageNames": ["sku", "skuba"],
      "updateTypes": ["patch"]
    },
    {
      "extends": ["group:monorepos"],
      "excludePackageNames": [],
      "recreateClosed": true
    },
    {
      "groupName": "relay",
      "packageNames": ["react-relay"],
      "packagePatterns": ["^relay-"],
      "recreateClosed": true
    },
    {
      "automerge": true,
      "prPriority": 99,
      "schedule": "before 7am on every weekday",
      "updateTypes": ["pin"]
    }
  ],
  "commitMessageAction": "",
  "ignoreNpmrcFile": true,
  "lazyGrouping": false,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 3,
  "prNotPendingHours": 1,
  "rangeStrategy": "auto",
  "schedule": "before 7am on Monday and Friday",
  "semanticCommitScope": "",
  "semanticCommitType": "deps"
}
